<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WriteToExternalStorage">

    <TextView
        android:id="@+id/title_activity_write_to_external_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/title_activity_write_to_external_storage"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title_activity_write_to_external_storage"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="76dp"
        android:text="@string/filename"/>
    <EditText
        android:id="@+id/enter_filename"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_activity_write_to_external_storage"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="65dp"
        android:layout_toRightOf="@+id/filename"
        android:hint="@string/filename"/>
    <TextView
        android:id="@+id/file_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/filename"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="46dp"
        android:text="@string/file_content"/>
    <EditText
        android:id="@+id/enter_file_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_filename"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/file_content"
        android:hint="@string/file_content"/>
    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_below="@+id/file_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="46dp"/>


</RelativeLayout>